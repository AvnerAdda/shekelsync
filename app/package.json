{
  "name": "shekelsync",
  "version": "0.1.0",
  "description": "Personal finance tracker for Israeli banks and credit cards",
  "author": "ShekelSync",
  "license": "AGPL-3.0-or-later",
  "private": true,
  "engines": {
    "node": ">=22.12.0"
  },
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "npm --prefix ../renderer run dev",
    "build": "npm --prefix ../renderer run build",
    "build:renderer:electron": "npm --prefix ../renderer run build",
    "build-electron": "npm run build:renderer:electron && electron-builder",
    "start": "electron .",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "rebuild:sqlite": "CC=gcc-11 CXX=g++-11 npm rebuild better-sqlite3 --build-from-source",
    "postinstall": "patch-package && electron-builder install-app-deps",
    "lint": "npm run lint:app && npm run lint:renderer",
    "lint:app": "ESLINT_USE_FLAT_CONFIG=false eslint --ext .ts,.tsx .",
    "lint:renderer": "npm --prefix ../renderer run lint",
    "typecheck": "npm --prefix ../renderer run typecheck",
    "electron": "electron ../electron/main.js",
    "electron-dev": "USE_VITE_RENDERER=true RENDERER_DEV_URL=http://localhost:5173 concurrently \"npm --prefix ../renderer run dev\" \"wait-on http://localhost:5173 && electron ../electron/main.js --no-sandbox\"",
    "dist": "npm run build:renderer:electron && electron-builder --publish=never",
    "pack": "npm run build:renderer:electron && electron-builder --dir",
    "release": "npm run build:renderer:electron && electron-builder --publish=always",
    "clean": "rm -rf out build dist",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@sentry/electron": "^7.6.0",
    "@supabase/supabase-js": "^2.93.0",
    "better-sqlite3": "^12.6.2",
    "cors": "^2.8.6",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.7.3",
    "express": "^5.2.1",
    "israeli-bank-scrapers": "^6.7.1",
    "keytar": "^7.9.0",
    "openai": "^6.16.0",
    "uuid": "^13.0.0",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@fontsource/roboto": "^5.2.9",
    "@mui/icons-material": "^7.3.7",
    "@mui/material": "^7.3.7",
    "@mui/styled-engine-sc": "^7.3.7",
    "@mui/x-charts": "^8.26.0",
    "@mui/x-date-pickers": "^8.26.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/d3": "^7.4.3",
    "@types/d3-sankey": "^0.12.5",
    "@types/node": "^25.0.10",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "@vitest/coverage-v8": "^4.0.18",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "d3": "^7.9.0",
    "d3-sankey": "^0.12.3",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "jsdom": "^27.4.0",
    "patch-package": "^8.0.1",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-router-dom": "^7.13.0",
    "recharts": "^3.7.0",
    "styled-components": "^6.3.8",
    "stylis": "^4.3.6",
    "stylis-plugin-rtl": "^2.1.1",
    "supertest": "^7.2.2",
    "tailwindcss": "^4.1.18",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.shekelsync.finance",
    "productName": "ShekelSync",
    "compression": "maximum",
    "directories": {
      "output": "../dist",
      "buildResources": "../build-resources"
    },
    "files": [
      "server/**/*",
      "lib/**/*",
      "utils/**/*",
      "config/**/*",
      "node_modules/**/*",
      "package.json",
      "!**/*.map",
      "!**/__tests__/**",
      "!**/test/**",
      "!**/tests/**",
      "!**/docs/**",
      "!**/doc/**",
      "!**/example/**",
      "!**/examples/**",
      "!**/*.test.*",
      "!**/*.spec.*",
      "!**/.env",
      "!**/.env.*",
      "!**/.env.local",
      "!**/.env.*.local",
      {
        "from": "../electron",
        "to": "electron",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../renderer/dist",
        "to": "renderer/dist",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../scripts/init_sqlite_db.js",
        "to": "scripts/init_sqlite_db.js"
      }
    ],
    "asarUnpack": [
      "node_modules/@supabase/**/*",
      "node_modules/better-sqlite3/**/*",
      "node_modules/keytar/**/*"
    ],
    "extraResources": [
      {
        "from": "../scripts/init_sqlite_db.js",
        "to": "scripts/init_sqlite_db.js"
      },
      {
        "from": "../LICENSE",
        "to": "LICENSE"
      },
      {
        "from": "../THIRD_PARTY_NOTICES.txt",
        "to": "THIRD_PARTY_NOTICES.txt"
      }
    ],
    "win": {
      "icon": "../build-resources/logo.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "${productName}-${version}-Setup.${ext}"
    },
    "nsis": {
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "displayLanguageSelector": false
    },
    "mac": {
      "category": "public.app-category.finance",
      "icon": "../build-resources/logo.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "../build-resources/logo.png",
      "category": "Office"
    },
    "publish": {
      "provider": "github",
      "owner": "AvnerAdda",
      "repo": "shekelsync"
    }
  }
}
