# Primary database configuration (defaults to embedded SQLite)
CLARIFY_DB_MODE=sqlite
CLARIFY_SQLITE_PATH=dist/clarify.sqlite


# Encryption key used for securing stored credentials
CLARIFY_ENCRYPTION_KEY=replace-with-32-byte-secret
ALLOW_DEV_NO_ENCRYPTION=false

# Optional desktop-runtime flags
USE_VITE_RENDERER=true
RENDERER_DEV_URL=http://localhost:5173
ALLOW_DB_MIGRATE=false
SKIP_EMBEDDED_API=false

# Donation support link (used by in-app donation reminders and support modal)
DONATION_URL=https://buymeacoffee.com/shekelsync

# Supabase settings for validated supporter plans (Buy Me a Coffee sync)
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=
SUPABASE_SUPPORTER_ENTITLEMENTS_TABLE=supporter_entitlements
SUPABASE_SUPPORTER_INTENTS_TABLE=supporter_intents
SUPPORTER_REQUIRE_AUTH=false

# Desktop runtime note:
# copy required values into app/.env.local (not committed) for local runs.
