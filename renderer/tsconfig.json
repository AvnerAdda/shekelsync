{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@app/*": ["../app/*"],
      "@/*": ["../app/*"],
      "@renderer/*": ["src/*"],
      "@mui/*": ["./node_modules/@mui/*"],
      "@emotion/*": ["./node_modules/@emotion/*"],
      "@fontsource/roboto": ["./node_modules/@fontsource/roboto"],
      "@mui/x-date-pickers": ["./node_modules/@mui/x-date-pickers"],
      "@mui/x-charts": ["./node_modules/@mui/x-charts"],
      "@mui/styled-engine-sc": ["./node_modules/@mui/styled-engine-sc"],
      "react": ["./node_modules/react"],
      "react-dom": ["./node_modules/react-dom"],
      "react-dom/client": ["./node_modules/react-dom/client"],
      "react-dom/test-utils": ["./node_modules/react-dom/test-utils"],
      "react/jsx-runtime": ["./node_modules/react/jsx-runtime"],
      "react/jsx-dev-runtime": ["./node_modules/react/jsx-dev-runtime"]
    },
    "types": ["vite/client", "node"],
    "typeRoots": ["./node_modules/@types", "../app/node_modules/@types"]
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules", "src/features/**/__tests__"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
