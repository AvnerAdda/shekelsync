{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@app/*": ["../app/*"],
      "@/*": ["../app/*"],
      "@renderer/*": ["src/*"],
      "@mui/*": ["../app/node_modules/@mui/*"],
      "@emotion/*": ["../app/node_modules/@emotion/*"],
      "@fontsource/roboto": ["../app/node_modules/@fontsource/roboto"],
      "@mui/x-date-pickers": ["../app/node_modules/@mui/x-date-pickers"],
      "@mui/x-charts": ["../app/node_modules/@mui/x-charts"],
      "@mui/styled-engine-sc": ["../app/node_modules/@mui/styled-engine-sc"],
      "date-fns": ["../app/node_modules/date-fns"],
      "@sentry/electron": ["../app/node_modules/@sentry/electron"],
      "@sentry/electron/*": ["../app/node_modules/@sentry/electron/*"],
      "recharts": ["../app/node_modules/recharts"],
      "d3": ["./node_modules/@types/d3", "../app/node_modules/d3"],
      "d3-sankey": ["./node_modules/@types/d3-sankey", "../app/node_modules/d3-sankey"]
    },
    "types": ["vite/client", "node"],
    "typeRoots": ["./node_modules/@types", "../app/node_modules/@types"]
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules", "src/components/__tests__"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
